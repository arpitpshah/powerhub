{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",  // Output directory for compiled files
    "rootDir": "./src"   // Root directory for source files (if you have one)
  },
  "include": ["src/**/*"], // Include all files in src (change if your source files are in a different directory)
  "exclude": ["node_modules", "**/*.spec.ts"]
}
